{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "colored": {
        "()": "coloredlogs.ColoredFormatter",
        "format": "%(asctime)s - %(name)s - %(pathname)s - %(funcName)s (line: %(lineno)d)- [%(levelname)s] %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      },
      "simple": {
        "format": "%(asctime)s [%(levelname)s] %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      }
    },
    "handlers": {
      "stream": {
        "class": "logging.StreamHandler",
        "level": "DEBUG",
        "formatter": "colored",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "logging.FileHandler",
        "level": "DEBUG",
        "formatter": "simple",
        "filename": "log.log"
      }
    },
    "root": {
      "level": "DEBUG",
      "handlers": ["stream", "file"]
    }
  }
  